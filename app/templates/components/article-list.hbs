{{#paper-card class=mdWhiteframe_10dp as |card|}}
  <a class="postTitleContentStyle" href="#" onClick={{action "goToPost" idx}}>
    {{card.image  src=value.img alt=value.title title=value.title}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}{{value.title}}{{/text.headline}}
      {{/title.text}}
    {{/card.title}}
    {{#card.content}}
      {{value.text}}
    {{/card.content}}
  </a>
  {{#card.actions}}
    {{#paper-button iconButton=true}}
      {{paper-icon value.iconButtonList.favorite}}
    {{/paper-button}}
    {{#paper-button iconButton=true}}
      {{paper-icon value.iconButtonList.share}}
      {{article-share-menu url=value.url quote=value.title text=value.text imageUrl=value.img}}
    {{/paper-button}}
  {{/card.actions}}
{{/paper-card}}
